<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.libsdl.app.SDLActivity">
    <SurfaceView
        android:id="@+id/videoSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/btn_pause"
         android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@android:drawable/ic_media_play"
       />
    <RelativeLayout
        android:background="@color/transparent"
        android:layout_gravity="bottom"
        android:alpha="150"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/selectfile"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/selectfileselector"
            android:text="选择文件"/>
        <SeekBar
            android:id="@+id/sb_video"
            android:max="999"
            android:min="0"
            android:layout_toRightOf="@+id/selectfile"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/selectfile"
            android:layout_below="@id/sb_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:0:0"
            android:textColor="@android:color/white"
            android:id="@+id/tv_playing"
            android:paddingLeft="10dp"
            android:textSize="12sp"/>
        <TextView
            android:layout_alignRight="@+id/sb_video"
            android:layout_below="@id/sb_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:0:0"
            android:textColor="@android:color/white"
            android:paddingRight="10dp"
            android:id="@+id/tv_total"
            android:paddingLeft="10dp"
            android:textSize="12sp"/>
    </RelativeLayout>
</FrameLayout>
